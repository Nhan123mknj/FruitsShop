        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Tables</h1>
            <p class="mb-4">
                DataTables is a third party plugin that is used to generate the demo table below.
                For more information about DataTables, please visit the <a target="_blank"
                                                                           href="https://datatables.net">official DataTables documentation</a>.
            </p>

            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <a type="button" class="btn btn-primary btn-icon-split" asp-area="Admin" asp-controller="Blogs" asp-action="Create">
                            <span class="icon text-white-50">
                                <i class="fa-solid fa-plus"></i>
                            </span>
                            <span class="text">Thêm mới Blogs</span>
                        </a>
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Thứ tự</th>
                                    <th>Title</th>
                                    <th>Abstract</th>
                                    <th>Depict</th>
                                    <th>Images</th>
                                    <th>Link</th>
                                    <th>Tác giả</th>
                                    <th>Ngày tạo</th>
                                    <th>Contents</th>
                                    <th>Ẩn hiện</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 1;
                                }
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <th scope="row">@(i++)</th>
                                        <td>
                                            <div class="fixed-box">
                                                <a asp-area="Admin" asp-controller="Blogs" asp-action="Details"
                                               asp-route-id="@item.Blog_ID" class="text-primary">@item.Title</a>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="fixed-box">
                                                @item.Abstract
                                            </div>
                                        </td>
                                        <td>
                                            <div class="fixed-box">
                                                @item.Depict
                                            </div>
                                        </td>
                                        <td>
                                            <img src="@item.Images" alt="Image" style="max-width: 30px;height: auto;">
                                        </td>
                                        <td>@item.Link</td>
                                        <td>@item.Author</td>
                                        <td>@item.CreatedDate</td>
                                        <td>
                                            <div class="fixed-box">
                                                @item.Contents
                                            </div>
                                        </td>
                                        <td>
                                            <div class="custom-control custom-switch">
                                                <input type="checkbox" class="custom-control-input" id="isActiveCheckbox_@item.Blog_ID" data-id="@item.Blog_ID" data-isactive="@item.IsActive.ToString().ToLower()" checked="@item.IsActive" />
                                                <label class="custom-control-label" for="isActiveCheckbox_@item.Blog_ID"></label>
                                            </div>
                                        </td>

                                        <td>
                                            <a asp-area="Admin" asp-controller="Blogs" asp-action="Edit"
                                           asp-route-id="@item.Blog_ID" class="btn btn-primary btn-sm"
                                               title="Sửa nội dung sản phẩm"><i class="fa-solid fa-square-pen"></i></a>
                                            <a data-id="@item.Blog_ID" class="btn btn-danger btn-sm btn-delete"
                                               title="Xóa sản phẩm"><i class="fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
