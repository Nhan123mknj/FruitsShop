    </footer>
    <!-- End of Footer -->

</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $(".btn-delete").click(function (e) {
                // Prevent the default behavior of the anchor element
                e.preventDefault();

                _id = $(this).data("id");

                if (confirm("Bạn có muốn xóa không")) {
                    $.ajax({
                        url: "/Admin/Blogs/Delete",
                        type: "POST",
                        data: { id: _id },
                        success: function (result) {
                            if (result) {
                                // Remove the table row without reloading the page
                                $("#tr_" + _id).remove();
                                toastr.success('Xóa thành công');
                            }
                            else {
                                toastr.error('Xóa không thành công');
                            }
                        }
                    });
                }
            });
        });
    </script>
}
<script>
    $(document).ready(function () {
        $(".custom-control-input").change(function () {
            var _id = $(this).data("id");
            var isChecked = $(this).prop("checked");

            // Gửi yêu cầu AJAX để cập nhật trạng thái IsActive
            $.ajax({
                url: "/admin/Blogs/toggleIsActive",
                type: "POST",
                data: { id: _id, isActive: isChecked },
                success: function (result) {
                    if (result) {
                        // Cập nhật giao diện người dùng
                        $(".custom-control-input[data-id='" + _id + "']").data("isactive", isChecked);
                        toastr.success('Đã cập nhật trạng thái');
                    } else {
                        toastr.error('Cập nhật không thành công');
                    }
                }
            });
        });
    });

</script>




